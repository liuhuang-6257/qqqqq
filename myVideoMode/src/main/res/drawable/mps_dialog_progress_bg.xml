<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:id="@android:id/background">
	    <shape>
			<corners android:radius="5dip" />
			<gradient
                android:startColor="#a2a2a2"
                android:centerColor="#d0d0d0"
                android:centerY="0.65"
                android:endColor="#ffffff"
                android:angle="270"
        		/>
			<stroke android:width="0.5dp" android:color="#8e8e8e"/>
		</shape>
	</item>
    <item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
	            <gradient
                    android:startColor="#bbd1f4"
                    android:centerColor="#2775d6"
                    android:centerY="0.65"
                    android:endColor="#378cf1"
                    android:angle="270"
	            />
			</shape>
		</clip>
	</item>
</layer-list>