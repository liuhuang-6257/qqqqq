<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mps_dialog_white_bg"
    android:orientation="vertical" >
    <!--标题 -->
    <TextView 
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:minHeight="40dp"
    	android:padding="10dp"
    	android:gravity="center"
    	android:textColor="#101010"
    	android:textStyle="bold"
    	android:textSize="17sp" />
    
    <!--中间的内容  -->
    <TextView 
        android:id="@+id/alert_message"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#101010"
    	android:minHeight="50dp"
    	android:padding="10dp"
    	android:gravity="center_horizontal"
    	android:textSize="16sp" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#64808080"/>
    
    <!-- 按钮 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button 
	        android:id="@+id/alert_btn_1x"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@drawable/mps_dialog_btn_left_selector"
	        android:gravity="center"
	        android:textColor="@drawable/mps_dialog_text_color"
	        android:textSize="17sp"/>
        <View 
	        android:layout_width="0.5px"
	        android:layout_height="match_parent"
	        android:background="#64808080"/>
        <Button 
	        android:id="@+id/alert_btn_2x"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@drawable/mps_dialog_btn_right_selector"
	        android:gravity="center"
	        android:textColor="@drawable/mps_dialog_text_color"
	        android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>